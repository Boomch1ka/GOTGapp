@model IEnumerable<Volunteer>
@{
    ViewData["Title"] = "Volunteer Directory";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Contact</th>
            <th>Skills</th>
            <th>Assigned Task</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var volunteer in Model)
        {
            <tr>
                <td>@volunteer.Name</td>
                <td>@volunteer.Contact</td>
                <td>@volunteer.Skills</td>
                <td>@volunteer.AssignedTask</td>
                <td>
                    <a asp-action="Details" asp-route-id="@volunteer.ID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@volunteer.ID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@volunteer.ID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Register New Volunteer</a>