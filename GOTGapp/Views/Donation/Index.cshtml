@model IEnumerable<Donation>
@{
    ViewData["Title"] = "Donation Tracker";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Donor</th>
            <th>Resource</th>
            <th>Quantity</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donation in Model)
        {
            <tr>
                <td>@donation.DonorName</td>
                <td>@donation.ResourceType</td>
                <td>@donation.Quantity</td>
                <td>@donation.Date.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@donation.ID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@donation.ID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@donation.ID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Make a New Donation</a>