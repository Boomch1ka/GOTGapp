@model IEnumerable<IncidentReport>
@{
    ViewData["Title"] = "Incident Reports";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Location</th>
            <th>Description</th>
            <th>Date</th>
            <th>Reporter</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.Location</td>
                <td>@report.Description</td>
                <td>@report.Date.ToString("yyyy-MM-dd")</td>
                <td>@report.ReporterName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@report.ID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@report.ID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@report.ID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Report New Incident</a>
